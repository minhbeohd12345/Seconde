<?xml version="1.0" encoding="utf-8"?>
<!-- Inbox -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:layout_width="360dp"
    tools:layout_height="800dp">

    <!-- Top header -->
    <View
        android:id="@+id/topBand"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="#B39DDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Search pill -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchPill"
        android:layout_width="331dp"
        android:layout_height="51dp"
        android:background="@drawable/bg_white"
        android:paddingStart="26dp"
        android:paddingEnd="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp">

        <ImageView
            android:id="@+id/icSearch"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:src="@drawable/vector"
            android:contentDescription="@string/cd_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"/> <!-- Icon dropdown -->

        <TextView
            android:id="@+id/tvSearchHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:text="Search in mail"
            android:textColor="#B39DDB"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/icSearch"
            app:layout_constraintEnd_toStartOf="@id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Owner avatar -->
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/sample2"
            android:background="@drawable/circle_stroke_purple"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Inbox-->
    <TextView
        android:id="@+id/tvInbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox"
        android:textColor="#6E6E6E"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="14dp"
    android:layout_marginTop="108dp"/>

    <!-- Bg -->
    <View
        android:id="@+id/contentBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F9F3FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="140dp"/>

    <!-- inbox items-->
    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp">

        <include layout="@layout/item_inbox"/>
        <include layout="@layout/item_inbox"/>
        <include layout="@layout/item_inbox"/>
    </LinearLayout>

    <!-- Compose button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/composePill"
        android:layout_width="123dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_dark_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="208dp"
        android:layout_marginTop="709dp">

        <ImageView
            android:id="@+id/icCompose"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/group27"
            android:tint="#FFFFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            app:layout_constraintBottom_toBottomOf="parent"/>  <!-- icon bút chì -->

        <TextView
            android:id="@+id/tvCompose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compose"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/icCompose"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="11dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
